{
  "schemaVersion": 1,
  "id": "malum",
  "version": "${version}",
  "name": "${mod_name}",
  "description": "${mod_description}",
  "authors": [
    "${mod_authors}, MrSterner"
  ],
  "license": "${mod_license}",
  "icon": "assets/lodestone/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "com.sammy.malum.MalumMod"
    ],
    "client": [
      "com.sammy.malum.MalumModClient"
    ],
    "cardinal-components-entity": [
      "com.sammy.malum.common.components.MalumComponents"
    ],
    "cardinal-components-world": [
      "com.sammy.malum.common.components.MalumComponents"
    ],
    "fabric-datagen": [
      "com.sammy.malum.data.DataGenerators"
    ],
    "jei_mod_plugin": [
      "com.sammy.malum.compability.jei.JEIHandler"
    ],
    "emi": [
      "com.sammy.malum.compability.emi.EMIHandler"
